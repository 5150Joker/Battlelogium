<Window x:Class="BF3WrapperWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:aw="clr-namespace:Awesomium.Windows.Controls;assembly=Awesomium.Windows.Controls"
        WindowStyle="None" ResizeMode="NoResize"  
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Height="300" Width="600" Topmost="True">
       
    <Window.Resources>
        <Storyboard x:Key="FadeOut" BeginTime="0:0:2">
            <DoubleAnimation From="1" To="0" Storyboard.TargetProperty="(UIElement.Opacity)" Duration="0:0:3"/>
        </Storyboard>
    </Window.Resources>
    
    <Grid>
   
        <Image Canvas.ZIndex="1" Stretch="UniformToFill"  Source="loading.png" HorizontalAlignment="Center" Name="LoadingImage" VerticalAlignment="Center" />
        <aw:WebControl HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="BattlelogBrowser" VerticalAlignment="Top" />
        
    </Grid>
</Window>
