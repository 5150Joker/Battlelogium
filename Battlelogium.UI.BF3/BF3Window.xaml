<bl:UIWindow x:Class="Battlelogium.UI.BF3.BF3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bl="clr-namespace:Battlelogium.Core.UI;assembly=Battlelogium.Core"
        xmlns:ani="clr-namespace:Battlelogium.ThirdParty.Animator;assembly=Battlelogium.ThirdParty.Animator"
        Title="MainWindow" 
        MinHeight="400" MinWidth="400" 
        
        >
    <bl:UIWindow.Background>
        <ImageBrush ImageSource="images\background.png" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Bottom"/>
    </bl:UIWindow.Background>

    <bl:UIWindowControl x:Name="Control" BackgroundImage="images\background.png" LoadingSprite="images\loadingsprite.png"></bl:UIWindowControl>

</bl:UIWindow>
