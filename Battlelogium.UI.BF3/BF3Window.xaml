<bl:UIWindow x:Class="Battlelogium.UI.BF3.BF3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bl="clr-namespace:Battlelogium.Core.UI;assembly=Battlelogium.Core"
        xmlns:ani="clr-namespace:Battlelogium.ThirdParty.Animator;assembly=Battlelogium.ThirdParty.Animator"
        Title="MainWindow" 
        MinHeight="400" MinWidth="400"
        >
    <bl:UIWindow.Background>
        <ImageBrush ImageSource="images\background.png" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Bottom"/>
    </bl:UIWindow.Background>
    <Grid x:Name="MainGrid">
        <Label Canvas.ZIndex="-1" Foreground="Gray" Content="Battlelogium Version" Height="28" HorizontalAlignment="Left" Margin="3,0,0,0" Name="VersionLabel" VerticalAlignment="Bottom" />
        <Button Content="debug" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Click" Panel.ZIndex="100"/>
        <ani:Animator Name="LoadingIcon" ImageSource="images\loadingsprite.png" Interval="0:0:0.045" HorizontalOffset="24" VerticalOffset="28" 
                      Panel.ZIndex="110" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Grid.Row="1"/>
    </Grid>
</bl:UIWindow>
